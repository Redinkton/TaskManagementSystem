@page
@model WebUI.Pages.Empl.IndexModel

@{
    ViewData["Title"] = "Employees";
}

<h1>Employees</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Id)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort">
                    @Html.DisplayNameFor(model => model.Employees[0].FirstName)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].LastName)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                @Html.DisplayNameFor(model => model.Employees[0].Tasks)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employees)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => ((Microsoft.AspNetCore.Identity.IdentityUser<string>)item).Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                @*TODO: Add role*@
@*                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Tasks)
                </td>
                <td>
                    <a asp-page="./Add" asp-route-id="@item.Id">Add new task</a>
                </td>
            </tr>
        }
    </tbody>
</table>
